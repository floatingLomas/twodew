// Wrap with Layout
extends ../layout

// Go!
block content
    .row
        .col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3
            h4 Confirm Delete

    form.col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3(role='form' action='/delete/' + todo._id method='post')
        .panel.panel-danger
            .panel-heading
                .panel-title= "Are you sure you want to delete '" + todo.title + "'?"

            .panel-body This action is
                em  irreversible.

            .panel-footer.clearfix
                button.pull-right.btn.btn-danger(type='submit') I'm sure
