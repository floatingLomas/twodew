.logo-container
    background todo-blue-color
    height logo-height

.menu-container
    background linear-gradient(top, #192229, #161e24)

    width nav-width
    height inherit

    overflow hidden
    padding-bottom 500px
    margin-bottom -500px

ul.unstyled.nav-menu
    padding-top 40px

    height inherit

    list-style none

    li.separator
        background #2c3947
        height 1px
        width 100%

        margin-top 18px
        margin-bottom 18px

    li.menu-item
        color white
        font-size 24px

        display inline-block

        padding-left 24px
        padding-right 24px

        padding-top 28px
        padding-bottom 30px

        &:first-child
            padding-bottom 40px

        &.active
            color todo-blue-color

        span[class^='icon-']
            color todo-blue-color
            font-size 34px

            padding-right 14px

        span.icon-plus-circled
            color todo-add-color
