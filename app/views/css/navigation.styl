.nav
    float left

    height 100%

    padding-bottom 1000px
    margin-bottom -1000px

.logo-container
    background todo-blue-color
    width nav-width
    height logo-height

.menu-container
    background linear-gradient(top, #192229, #161e24)

    width nav-width
    height 100%

ul.unstyled
    padding-top 51px

    padding-left 29px
    padding-right 29px

    list-style none

    li.menu-item
        color white
        font-size 24px

        display inline-block
        padding-bottom 24px

        &:first-child
            padding-bottom 34px

        &.active
            color todo-blue-color

        span[class^='icon-']
            color todo-blue-color
            font-size 34px

            padding-right 19px

        span.icon-plus-circled
            color todo-add-color
