.transition // gradient line between search and the main content
    height 6px
    width 100%
    background linear-gradient(top, #d2d5d6, container-color)

.main
    width 100%
    background-color container-color
    height inherit
    overflow hidden
    padding-bottom 500px
    margin-bottom -500px

.list
    width 100%
    padding-top 44px
    padding-left 44px
    padding-right 48px

.day-header
    width 100%

    padding-top 24px
    padding-bottom 48px

    font-size 26px

icon-space-width = 168px
icon-circle-diameter = 112px
icon-connector-line-width = 10px

circl-offset-from-top = 69px

ul.todos
    position relative

    &::after
        position absolute
        content ''
        left (icon-circle-diameter / 2)
        top (circl-offset-from-top + icon-circle-diameter / 2)
        bottom (circl-offset-from-top + icon-circle-diameter)
        border-left icon-connector-line-width solid white
        z-index 0


.todo
    height 100%
    position relative
    z-index 1

.todo-status
    position relative
    width icon-space-width

.todo-icon-space
    position relative

    padding-top circl-offset-from-top
    padding-left 4px
    height 100%

.todo-icon-circle
    display table-cell
    margin 0
    padding 0

    vertical-align middle
    text-align center

    draw-circle(icon-circle-diameter)

    &.overdue
        background-color overdue-circle-color

    &.complete
        background-color complete-circle-color

    span
        color white
        font-size 48px

.todo-content
    width "calc(100% - %s)" % (icon-space-width)

    margin-bottom 36px

    padding-top 34px
    padding-right 28px
    padding-bottom 48px
    padding-left 28px

    background-color white
    box-shadow 0 1px 2px rgba(0, 0, 0, .125)

    font-size 24px
    letter-spacing 1px

.todo-meta
    color todo-meta-color
    letter-spacing .85px

.todo-title
    color todo-title-color
    font-size 39px
    letter-spacing .4px

    padding-top 28px
    padding-bottom 20px

.todo-body
    font-size 24px
    color todo-body-color
    letter-spacing .9px
    line-height 1.65em

.todo-edit
    font-size 22px

    .form-group
        margin-bottom 18px

    .form-group.due-picker
        margin-bottom 4px

    .form-control
        font-size 22px

        padding 18px

    input.form-control
        height 60px

    button
        font-size 28px
        width 218px
        height 60px

        margin-left 18px

        border-radius 2px

    label
        width 260px
        height 43px

        display inline-block
        clear none

    select.form-control
        width 194px
        height 43px

        display inline-block
        clear none
