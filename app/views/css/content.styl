.transition // gradient line between search and the main content
    height 6px
    width 100%
    background linear-gradient(top, #d2d5d6, container-color)

.main
    width 100%
    background-color container-color
    height inherit
    overflow hidden
    padding-bottom 500px
    margin-bottom -500px

.list
    width 100%
    padding-top 44px
    padding-left 44px
    padding-right 48px

.day-header
    width 100%

    padding-top 24px
    padding-bottom 48px

    font-size 26px

icon-space-width = 168px
icon-circle-diameter = 112px
icon-connector-line-width = 10px

.todo
    height 100%

.todo-status
    display table-cell
    position relative
    width icon-space-width

    &::before
        position absolute
        content ''
        left (icon-circle-diameter / 2)
        height 100%
        border-left icon-connector-line-width solid black
        z-index 999

.todo-icon-space
    position relative
    padding-top 69px
    padding-left 4px

.todo-icon-circle
    margin 0
    padding 0

    display table-cell
    vertical-align middle
    text-align center

    draw-circle(icon-circle-diameter)

    &.overdue
        background-color overdue-circle-color

    &.complete
        background-color complete-circle-color

    span
        color white
        font-size 48px

.todo-content
    display table-cell
    width "calc(100% - %s)" % (icon-space-width)

    margin-bottom 36px

    padding-top 34px
    padding-right 28px
    padding-bottom 48px
    padding-left 28px

    background-color white
    box-shadow 0 1px 2px rgba(0, 0, 0, .125)

    font-size 24px
    letter-spacing 1px

.todo-meta
    color todo-meta-color
    letter-spacing .85px

.todo-title
    color todo-title-color
    font-size 39px
    letter-spacing .4px

    padding-top 28px
    padding-bottom 20px

.todo-body
    font-size 24px
    color todo-body-color
    letter-spacing .9px
    line-height 1.65em

